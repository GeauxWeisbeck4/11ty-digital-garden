<!DOCTYPE html>
<html lang="{{ config.language }}">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <meta name="description" content="{{ description or site.description }}">
  <meta name="generator" content="{{ eleventy.generator }}">

  <!-- Fallback CDN Link for Bulma CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css">
  <link rel="icon" type="img/png" href="/_images/favicon.png" sizes="32x32">

  {% if layout === 'article.njk' or layout === 'articledata.njk' %}
    <meta property="og:site_name" content="{{config.title}}" />
    <meta property="og:type" content="article" />
    <meta name="twitter:card" content="summary" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{ description }}" />
    {% if permalink %}
      <meta property="og:url" content="https://{{config.domain}}{{ permalink }}" />
      {% else %}
      <meta property="og:url" content="https://{{config.domain}}{{ page.filePathStem }}/" />
    {% endif %}

    {% if featuredImage !== undefined %}
      <meta property="og:image" contents="https://{{config.domain}}{{featuredImage}}" />
      {% else %}
      <meta property="og:image" contents="https://{{config.domain}}/_images/default.jpg" />
    {% endif %}

  {% endif %}

  {# {% set css %}
       {% include "custom.css" %}
     {% endset %}
     <!-- <style> -->
        {{ css | cssmin | safe }}
     <!-- </style> #} -->
</head>